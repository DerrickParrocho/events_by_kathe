<!DOCTYPE html>
<html>
<head>
  <title>Events by Kathe </title>
      <%= stylesheet_link_tag    'application', media: 'all' %>
      <%= javascript_include_tag 'application' %>
      <%= csrf_meta_tags %>
</head>

<body>
    
<nav class="navbar navbar-inverse navbar-static-top" role="navigation">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to root_path, class: 'navbar-brand' do %>
                    <i class="fa fa-heart"></i>
                    Events by Kathe
                <% end %>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <li><%= link_to "Home", root_path %></li>
                    </li>
                    <li>
                        <li><%= link_to "Gallery", gallery_path %></li>
                    </li>
                    <li>
                        <li><%= link_to "Services", services_path %></li>
                    </li>
                    <li>
                        <li><%= link_to "Contact", new_contact_path %></li>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
</nav>
        
        <div class="container-fluid">
            <div class="pull-right">
                <div id="fb-root" ></div>    
                <div class="fb-like text-right" data-width="170px" data-href="https://www.facebook.com/eventsbykathe/" data-layout="standard" data-action="like" data-size="small" data-show-faces="false" data-share="true"></div>
            </div>
        </div>

        <div class="container-fluid">
            <% flash.each do |key, value| %>
              <%= content_tag :div, value, class: "alert alert-#{key}" %>
            <% end %>
            <%= yield %>
        </div>
</body>

<hr>
        
<!-- Footer -->
    <footer>
        <div class="container-fluid">
            <div class="col-lg-12 text-center">
                <p>Copyright &copy; Events by Kathe 2017</p>
            </div>
        </div>
    </footer>

</html>
